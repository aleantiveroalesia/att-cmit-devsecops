{
  "name": "att-cmit-devsecops-automation",
  "version": "2.1.0",
  "description": "Sistema modificado por seguridad",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/att-cmit/devsecops-automation.git"
  },
  "homepage": "https://github.com/att-cmit/devsecops-automation#readme",
  "bugs": {
    "url": "https://github.com/att-cmit/devsecops-automation/issues"
  },
  "keywords": [
    "devsecops",
    "automation",
    "security",
    "cicd",
    "att",
    "cmit",
    "typescript",
    "node.js"
  ],
  "author": {
    "name": "AT&T CMIT DevSecOps Team",
    "email": "cmit-devsecops@att.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:test": "NODE_ENV=test npm run start",
    "build": "npm run clean && npm run compile",
    "build:prod": "npm run clean && npm run compile:prod",
    "clean": "rimraf dist coverage .nyc_output",
    "compile": "tsc",
    "compile:prod": "tsc --project tsconfig.prod.json",
    "compile:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "npm run lint:js && npm run lint:ts",
    "lint:js": "eslint \"src/**/*.{js,jsx}\" --cache",
    "lint:ts": "eslint \"src/**/*.{ts,tsx}\" --cache",
    "lint:security": "eslint \"src/**/*.{js,ts,jsx,tsx}\" --config .eslintrc.security.js",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:ts -- --fix",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:security": "npm run test:unit -- --testNamePattern=\"security|Security\"",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:debug": "jest --inspect-brk --runInBand --config=jest.config.js",
    "test:a11y": "axe-cli http://localhost:3000 --save accessibility-report.json",
    "db:migrate": "npx prisma migrate deploy",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:test": "NODE_ENV=test npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:seed": "tsx src/database/seeds/index.ts",
    "db:seed:test": "NODE_ENV=test tsx src/database/seeds/index.ts",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "security:scan": "npm audit && npm run security:snyk && npm run security:deps",
    "security:snyk": "snyk test --severity-threshold=medium",
    "security:deps": "npm run security:audit-ci",
    "security:audit-ci": "audit-ci --config .audit-ci.json",
    "docker:build": "docker build -t att-cmit-devsecops .",
    "docker:run": "docker run -p 3000:3000 att-cmit-devsecops",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:undeploy": "kubectl delete -f infrastructure/kubernetes/",
    "docs:generate": "typedoc --out docs/api src",
    "docs:serve": "npx http-server docs -p 8080",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "postinstall": "npm run build",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "metrics:dora": "tsx src/scripts/metrics/calculate-dora-metrics.ts",
    "report:security": "tsx src/scripts/security/generate-security-report.ts",
    "setup:dev": "npm install && npm run db:generate && npm run db:migrate:dev && npm run db:seed"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.7.1",
    "@sentry/node": "^7.91.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.8",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@eslint/js": "^8.56.0",
    "@playwright/test": "^1.40.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "audit-ci": "^6.6.1",
    "axe-cli": "^4.8.2",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "snyk": "^1.1275.0",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json}": [
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test:unit && npm run security:scan"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "chore",
          "security",
          "ci",
          "build"
        ]
      ],
      "scope-enum": [
        2,
        "always",
        [
          "api",
          "auth",
          "database",
          "security",
          "monitoring",
          "deployment",
          "docs",
          "config",
          "tests"
        ]
      ],
      "subject-max-length": [2, "always", 72],
      "body-max-line-length": [2, "always", 100]
    }
  },
  "standard-version": {
    "scripts": {
      "prebump": "npm run test && npm run security:scan",
      "postbump": "npm run build",
      "precommit": "git add -A",
      "posttag": "git push --follow-tags origin main"
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "security",
        "section": "Security"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "@eslint/js/recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "security",
      "sonarjs",
      "import",
      "jest"
    ],
    "rules": {
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "error",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-non-literal-require": "error",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-pseudoRandomBytes": "error",
      "sonarjs/cognitive-complexity": ["error", 15],
      "sonarjs/no-duplicate-string": "error",
      "sonarjs/no-identical-functions": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "import/no-unresolved": "error",
      "import/order": "error"
    },
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**",
      "!src/database/migrations/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 30000,
    "maxWorkers": "50%"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ],
    "exec": "tsx src/index.ts"
  },
  "config": {
    "dora_metrics": {
      "lead_time_target": 259200,
      "deployment_frequency_target": "daily",
      "mttr_target": 1800,
      "change_failure_rate_target": 0.1
    },
    "security_thresholds": {
      "critical_vulnerabilities": 0,
      "high_vulnerabilities": 2,
      "medium_vulnerabilities": 10,
      "low_vulnerabilities": 50
    }
  },
  "funding": {
    "type": "corporate",
    "url": "https://att.com"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
